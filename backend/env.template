# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Command: cp env.template .env

# Application Configuration
NODE_ENV=development
PORT=5000
APP_NAME=Education & Learning Copilot
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=education_copilot_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_URL=postgresql://your_db_user:your_db_password@localhost:5432/education_copilot_db

# MongoDB Configuration (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/education_copilot
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this
JWT_REFRESH_EXPIRES_IN=30d

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=education-copilot-storage

# Email Service Configuration
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@educationcopilot.com
EMAIL_FROM_NAME=Education & Learning Copilot

# SMTP Configuration (Alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
SMTP_SECURE=false

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key

# LMS Integration
CANVAS_API_URL=https://canvas.instructure.com/api/v1
CANVAS_API_TOKEN=your_canvas_api_token
MOODLE_API_URL=https://your-moodle-instance.com/webservice/rest/server.php
MOODLE_API_TOKEN=your_moodle_api_token
BLACKBOARD_API_URL=https://your-blackboard-instance.com
BLACKBOARD_API_KEY=your_blackboard_api_key

# OpenAI/LLM Configuration (for AI agents)
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
ANTHROPIC_API_KEY=your_anthropic_api_key

# RAG Configuration
VECTOR_DB_URL=your_vector_database_url
EMBEDDING_MODEL=text-embedding-ada-002
RAG_TOP_K=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,txt,md
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
ANALYTICS_API_KEY=your_analytics_api_key

# Message Queue (RabbitMQ/Kafka)
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
KAFKA_BROKERS=localhost:9092

# Session Configuration
SESSION_SECRET=your_session_secret_change_this
SESSION_MAX_AGE=86400000

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_ALGORITHM=aes-256-gcm

# API Keys
API_KEY_ADMIN=your_admin_api_key
API_KEY_PUBLIC=your_public_api_key

# Feature Flags
FEATURE_QUIZ_GENERATOR=true
FEATURE_LESSON_PLANNER=true
FEATURE_LEARNING_PATH=true
FEATURE_RAG=true
FEATURE_YOUTUBE_INTEGRATION=true
FEATURE_LMS_INTEGRATION=true

